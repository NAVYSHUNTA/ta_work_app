<h1>勤務情報の一覧</h1>

<%= link_to "新規作成", new_work_path %>

<% if notice %>
  <div id="notice" class="item">
    <%= notice %>
  </div>
<% end %>

<div>
  <% @works.each do |work| %>
    <ul class="item">
      <li>科目名：<%= work.subject %></li>
      <li>授業日：<%= work.class_date %></li>
      <li>状態：<%= work.status_jp %></li>
      <li>場所：<%= work.classroom %></li>
      <li>時限：<%= work.period_range %></li>
      <li>開講期間：<%= work.semester_period %></li>
      <li><%= link_to "勤務情報を編集", edit_work_path(work) %></li>
      <li><%= link_to "勤務情報を削除", work_path(work), data: { turbo_method: :delete, turbo_confirm: "本当に削除しますか？" } %></li>
    </ul>
  <% end %>
</div>
